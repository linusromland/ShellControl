{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,

		"paths": {
			"@local/shared/*": ["../../packages/shared/*"],
			"@local/shared": ["../../packages/shared"]
		}
	},
	"include": ["vite.config.ts"],
	"references": [
		{
			"path": "../../packages/shared"
		},
		{ "path": "./tsconfig.node.json" }
	]
}
